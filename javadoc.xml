<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project default="javadoc">

	<import file="${basedir}/build.xml"/>

	<target name="javadoc">
		<javadoc
		           destdir="api-docs"
		           author="true"
		           version="true"
		  		   access="public"
		           use="true"
		           windowtitle="svenson ${project.version} API"
				   packagenames="org.svenson"
				   classpathref="compile.path">

			<packageset dir="src" defaultexcludes="yes">
				<include name="**/*"/>
			</packageset>

			<doctitle><![CDATA[<h1>svenson ${project.version} API</h1>]]></doctitle>
			<bottom><![CDATA[&copy; 2009 Sven "fforw" Helmberger, BSD licensed]]></bottom>
	</javadoc>
</target>
</project>
